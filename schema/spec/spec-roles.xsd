<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

  <!-- Roles -->
  <xs:element name="roles">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="delete" minOccurs="0" maxOccurs="unbounded" 
                    type="RoleId" />

        <xs:element ref="role" minOccurs="0" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="role">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="ability"/>
        <xs:element ref="modifier"/>
        <xs:element ref="required-ability"/>
        <xs:element ref="required-goods"/>
        <xs:element name="role-change">
          <xs:complexType>
            <xs:attribute name="capture" use="required" type="xs:string"/>
            <xs:attribute name="from" use="required" type="xs:string"/>
          </xs:complexType>
        </xs:element>
      </xs:choice>
      <xs:attribute name="id" use="required" type="xs:ID"/>
      <xs:attribute name="preserve" use="optional" type="xs:boolean"/>

      <xs:attribute name="downgrade" type="RoleId"/>
      <xs:attribute name="expert-unit" type="UnitTypeId"/>
      <xs:attribute name="maximum-count" type="xs:nonNegativeInteger"/>
      <!-- @compat 0.11.3 -->
      <xs:attribute name="expertUnit" type="UnitTypeId"/>
      <xs:attribute name="maximumCount" type="xs:nonNegativeInteger"/>
      <!-- end @compat 0.11.3 -->
    </xs:complexType>
  </xs:element>

</xs:schema>
